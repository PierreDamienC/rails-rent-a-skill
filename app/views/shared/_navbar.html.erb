<!-- Here the application will decide of the class // .navbar-rentskill (for the whole site) or .navbar-home (for homepage)-->
    <%= link_to "/", class: "navbar-brand" do %>
    <img src="https://res.cloudinary.com/dsaxkp6xo/image/upload/v1606313046/LOGO_SKILLSHARE_tyreyq.png" alt="logo" id="logo">
    <% end %>


  <% if controller_name == "pages" && action_name=='home' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon" id="star-home"></span>
      </button>
    <% else %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
    <% end %>


  <p id='title-navbar'><%= link_to "RENT A SKILL", root_path%></p>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="navbar-nav align-items-center">
      <% if user_signed_in? %>
          <%= link_to "Rent a skill", skills_path, class: "nav-link" %>
        <p class="nav-item">
          <%= link_to "Share a skill", new_skill_path, class: "nav-link" %>
        </p>
        <div class="nav-item dropdown">
          <!-- Si on propose Ã l 'utilisateur de mettre sa photo on pourra utiliser ce code en remplacant l'url dans l'image tag par photo.user.key-->
          <% if current_user.photo.attachment %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <div class="avatar dropdown-toggle defaut" id= "navbarDropdown", data-toggle= "dropdown", aria-haspopup= "true", aria-expanded= "false"></div>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "My bookings", my_bookings_path, class: "dropdown-item" %>
            <%= link_to "Users Bookings", users_bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to "Rent a skill", skills_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </div>
  </div>
</div>
